<!DOCTYPE html>
<html>

<head>
    {% block head %}
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda&display=swap" rel="stylesheet">
    {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% endblock %}
</head>

<body class="bg-light">
    {% block header %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Esteban</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('articlesList') }}">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('book') }}">Réservations</a>
                </li>
            </ul>

            <button class="btn btn-dark">Me contacter</button>
        </div>
    </nav>

    {% endblock %}

    {% block pageContent %}

    {% endblock %}
    
    {% block footer %}

    <div class="container-fluid bg-dark text-white d-flex flex-column text-center">
        <div class="d-flex flex-row text-center justify-content-center mb-2 mt-2">
            <i class="fab fa-facebook-square fa-3x mr-4"></i>
            <i class="fab fa-twitter-square fa-3x mr-4"></i>
            <i class="fab fa-instagram-square fa-3x mr-4"></i>
            <i class="fab fa-github-square fa-3x mr-4"></i>
        </div>
        <p>Mentions légales - Données personnelles</p>
    </div>

    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script src="https://kit.fontawesome.com/11979671c7.js" crossorigin="anonymous"></script>
    {% endblock %}
</body>

</html>