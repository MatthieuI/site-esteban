<!DOCTYPE html>
<html>

<head>
    {% block head %}
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda&display=swap" rel="stylesheet">
    {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% endblock %}
</head>

<body>
    {% block header %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary text">
        <a class="navbar-brand" href="{{ path('backLandingPage') }}">Back-office</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="#">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Commentaires</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Réservations</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('backClientList') }}">Clients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Paramètres</a>
                </li>
            </ul>

            <a class="btn btn-danger" href="{{ path('backLogout') }}">Déconnexion</a>
        </div>
    </nav>

    {% endblock %}

    {% block pageContent %}

    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>

</html>