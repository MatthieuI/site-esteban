{% extends "baseBackOffice.html.twig" %}

{#{% form_theme articleForm '@FOSCKEditor/Form/ckeditor_widget.html.twig' %}#}

{% block pageContent %}
<div class="container">
    <h2 class="text-center my-5"><a href="{{path('backArticleEditor')}}">Écrire un nouvel article</a></h2>
    <h2 class="text-center">Mes articles :</h2>
    <p class="text-center">Pour modifier un article, clique sur le lien d'un article.</p>
    <p class="text-center">Pour supprimer un article, coche l'article dans la liste, puis clique sur le bouton en bas de
        page.</p>
    <form action="{{path('deleteArticle')}}" method="post">
        <ul class="list-group">
            {% for article in articles %}
            <li class="list-group-item"><input name="delete[]" class="form-check-input" type="checkbox" value="{{article.id}}"><a
                    href="/back-office/articles/modify/{{article.id}}">{{article.title}}</a></input></li>
            {% endfor %}
        </ul>
        <div class="text-center">
            <button class="btn btn-danger my-4" type="submit">Effacer la sélection</button>
        </div>
    </form>
</div>
{% endblock %}