{% extends "baseBackOffice.html.twig" %}

{% block pageContent %}
<div class="container my-2">
    <h3 class="text-center">Sélectionner un ou plusieurs rendez-vous et effectuer une action avec un des boutons en bas de liste</h3>
    <ul class="list-group">
        {% for appointment in unconfirmed %}
        <li class="list-group-item"><input name="delete[]" class="form-check-input" type="checkbox"
                {#value="' . $question['id'] . '" #}>{{appointment.client.lastName}} {{appointment.client.firstName}},
            le {{appointment.date|date("d/m/Y")}} à {{appointment.time|date("H:i")}}</input></li>
        {% endfor %}
    </ul>
    <div class="row my-3">
        <button class="btn btn-success mr-2">Confirmer rendez-vous</button>
        <button class="btn btn-danger ml-2">Annuler rendez-vous</button>
    </div>
</div>
{% endblock %}